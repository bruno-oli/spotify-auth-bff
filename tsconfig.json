{
  "compilerOptions": {
    "target": "es2016",   
    "module": "commonjs",  
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                  
    "skipLibCheck": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "allowJs": false,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
